{
    "name": "wolnosciowiec/wolnosciowiec-file-repository",
    "description": "File storage service, built for ultra-low budget shared hostings with no footprint on performance",
    "license": "LGPLv3",
    "type": "project",
    "require": {
        "php": ">=7.0",
        "ext-sqlite3": "*",
        "ext-pdo_sqlite": "*",
        "silex/silex": "~2.0",
        "silex/web-profiler": "~2.0",
        "symfony/browser-kit": "~2.8|3.0.*",
        "symfony/class-loader": "~2.8|3.0.*",
        "symfony/config": "~2.8|3.0.*",
        "symfony/console": "~2.8|3.0.*",
        "symfony/css-selector": "~2.8|3.0.*",
        "symfony/debug": "~2.8|3.0.*",
        "symfony/finder": "~2.8|3.0.*",
        "symfony/form": "^3.2.14",
        "symfony/monolog-bridge": "~2.8|3.0.*",
        "symfony/process": "~2.8|3.0.*",
        "symfony/serializer": "~2.8|3.0.*",
        "symfony/security": "~2.8|3.0.*",
        "guzzlehttp/guzzle": "^6.2",
        "sorien/silex-pimple-dumper": "~2.0",
        "robmorgan/phinx": "^0.8.0",
        "wolnosciowiec/wolnosciowiec-web-deploy": "1.*@dev",
        "twig/twig": "^2.1",
        "symfony/twig-bridge": "^3.2",
        "dflydev/doctrine-orm-service-provider": "^2.0",
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-0": { "": "src/", "Tests\\": "tests/" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },

        "heroku": {
            "document-root": "web",
            "index-document": "index.php"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "composer dump-autoload -o",
            "bash ./bin/migrations.sh migrate",
            "bash ./bin/migrations.sh migrate -e dev",
            "bash ./bin/migrations.sh migrate -e test",
            "bash ./bin/generate-version-number.sh",
            "./bin/bower.sh"
        ],
        "post-update-cmd": [
            "composer dump-autoload -o",
            "bash ./bin/migrations.sh migrate",
            "bash ./bin/migrations.sh migrate -e dev",
            "bash ./bin/migrations.sh migrate -e test",
            "bash ./bin/generate-version-number.sh"
        ],
        "run": [
            "echo 'Started web server on http://localhost:8888'",
            "exec php -S 0.0.0.0:8888 -t ./web ./web/index_dev.php"
        ]
    },
    "require-dev": {
        "symfony/var-dumper": "^3.1"
    }
}
